@model IEnumerable<ExploreCalifornia.Models.BlogPost>
@{
    Layout = "_Layout";
}

<h1>Explorer's Blog</h1>

<p>Below are a few of the latest photos from some of our explorers.</p>

<div class="blog-posts">
    @foreach (var post in Model)
    {
        <div class="details">
            Posted on <span>@post.Posted</span> by <span>@post.Author</span>
        </div>
        <div class="comments-container">
            @post.Body
        </div>
    }
</div>