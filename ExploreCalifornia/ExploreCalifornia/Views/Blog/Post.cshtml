@model ExploreCalifornia.Models.BlogPost
@{
    Layout = "_Layout";
}

<article class="blog-post">
    <h1>@Html.ActionLink(Model.Title, "Post", "Blog", new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key })</h1>

    <div class="details">
        Posted on <span>@Model.Posted</span> by <span>@Model.Author</span>
    </div>
    <div class="comments-container">
        @Model.Body
    </div>
</article>